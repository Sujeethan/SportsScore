<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="5dp"
    android:layout_height="match_parent"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ff4173b2">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/description"
            android:layout_width="323dp"
            android:layout_height="wrap_content"
            android:text="@+id/label"
            android:layout_marginLeft="10px"
            android:textSize="20dp"
            android:layout_gravity="left|center"
            android:gravity="center"
            android:textStyle="bold" />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/icon"
            android:layout_width="130px"
            android:layout_height="150px"
            android:scaleType="fitXY"
            android:layout_marginLeft="5dp" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_weight="0.09"
        android:orientation="vertical"
        android:weightSum="1">


        <TextView
            android:id="@+id/year"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:text="@+id/label"
            android:textSize="10dp"
            android:gravity="center"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@+id/label"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:textSize="10dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:gravity="center" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp">



        <TextView
            android:id="@+id/stars"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:textSize="10dp"
            android:layout_marginRight="0dp"
            android:gravity="left"
            android:layout_gravity="left"
            android:layout_weight="3"
            android:textStyle="bold" />


            <TextView
                android:id="@+id/score"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="10dp"
                android:layout_marginRight="0dp"
                android:gravity="left|center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/stars" />


            <TextView
                android:id="@+id/score3"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:textSize="10dp"
                android:layout_marginRight="0dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/score" />


            <TextView
                android:id="@+id/score5"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:textSize="10dp"
                android:layout_marginRight="0dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/score3" />


            <TextView
                android:id="@+id/score7"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:textSize="10dp"
                android:layout_marginRight="0dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/score5"
                android:layout_marginStart="10dp" />


            <TextView
                android:id="@+id/score9"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_weight="1"
                android:textSize="10dp"
                android:layout_marginRight="0dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/score7" />





            <TextView
                android:id="@+id/stars2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:textSize="10dp"
                android:layout_weight="3"
                android:layout_marginRight="0dp"
                android:layout_gravity="left|center"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/score2"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:textSize="10dp"
                android:layout_marginRight="0dp"
                android:gravity="left|center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_alignTop="@+id/stars2"
                android:layout_alignStart="@+id/score" />


            <TextView
                android:id="@+id/score4"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:textSize="10dp"
                android:layout_marginRight="0dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_alignTop="@+id/score2"
                android:layout_toEndOf="@+id/score2" />


            <TextView
                android:id="@+id/score6"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:textSize="10dp"
                android:layout_marginRight="0dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_alignTop="@+id/score4"
                android:layout_toEndOf="@+id/score4" />


            <TextView
                android:id="@+id/score8"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:textSize="10dp"
                android:layout_marginRight="0dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_alignTop="@+id/score6"
                android:layout_toEndOf="@+id/score6" />


            <TextView
                android:id="@+id/score10"
                android:layout_width="15dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_weight="1"
                android:textSize="10dp"
                android:layout_marginRight="0dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_alignTop="@+id/score8"
                android:layout_toEndOf="@+id/score8" />



        </RelativeLayout>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon2"
            android:layout_width="130px"
            android:layout_height="150px"
            android:scaleType="fitXY"
            android:layout_marginBottom="5dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/menu_list"
        android:src="@drawable/ic_menu_moreoverflow"
        android:layout_marginRight="10dp"
        android:layout_height="25dp"
        android:layout_width="25dp"/>

</LinearLayout>






    </LinearLayout>

</LinearLayout>
</android.support.v7.widget.CardView>